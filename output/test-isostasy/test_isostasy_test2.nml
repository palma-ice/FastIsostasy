&isostasy
    method          = 4                 ! 0: constant lithospheric displacement; 1: LLRA; 2: ELRA, 3: EGIA, 4: ELVA or LV-ELVA (test1, test2, test3*, GrIS, test4 AIS, test5 gris) 
    dt_step         = 10.               ! [yr] Max. timestep to recalculate bedrock uplift and rate of change     | test1: 10 | test2: 10  | test3*: 1  | test4: 1   | test5: 1
    dt_lith         = 50.               ! [yr] Min. timestep to recalculate equilibrium lithospheric displacement | test1: 50 | test2: 50  | test3*: 1  | test4: 1   | test5: 1
    He_lith         = 70                 ! [km] Effective elastic thickness lithosphere                            | test1: 88 | test2: 70  | test3*: 88 | test4: -   | test5: 40 (otherwise unstable)
    visc            = 2.e21              ! [Pa s] Asthenosphere's viscosity, visc=1e21 for Bueler et al (2007)     |test1:1.e21|test2:2.e21 |test3:1.e21 | test4:1.e21| test5:1.e21 
    tau             = 200.0              ! [yr] Relaxation time 

    ! Static or transient load
    static_load     = .true.               ! [-] test1: .true. | test2: .true. | test3*: .true. | test4: .false. | test5: .false.

    ! Physical constants
    E               =  128.0                ! [GPa] Young's modulus | test1: 66 |  test2: 128 | test3: 66   | test4: 66   | test5: 66
    nu              =  0.28                 ! [-] Poisson's ratio   | test1: 0.5| test2: 0.28 | test3: 0.28 | test4: 0.28 | test5: 0.28
    rho_ice         = 931.                  ! [kg/m^3] 910          | test1: 910| test2: 931  | test3: 910  | test4: 910  | test4: 910
    rho_sw          = 1028.0                ! [kg/m^3] 
    rho_w           = 1000.0                ! [kg/m^3] 
    rho_a           = 3400.0                ! [kg/m^3] | test1: 3300 | test2: 3300  | test3: 3700  | test4: 3700  | test4: 3700
    rho_l           = 2800.0                ! [kg/m^3] 	
    g               = 9.81                  ! [m/s^2]
    r_earth         = 6.378e6               ! [m]  Earth's radius
    m_earth         = 5.972e24              ! [kg] Earth's mass 

    ! Viscous asthenosphere-related parameters 
    visc_method     = viscous_channel      ! test1: uniform | test2: viscous_channel | test3a: uniform | test3b: uniform | test3c: gaussian_minus | test3d: gaussian_plus | test4: laty | test5: uniform
    !Channel viscosity (for test2, test4)
    visc_c     = 1.e21                      ! [Pa s] Channel viscosity 
    thck_c     = 600.                       ! [km]   Channel thickness
    n_lev      = 3                          ! [-]    Number of layers (including lithosphere) | test2: 3 | test4: 5 

    !Calculate visco-elastic coupling (for test2, test3)
    viscoelastic_coupling = .true.          ! test1: .false. | test2: .true. | test3*: .false. | test4: .false. | test5: .false.

    ! Lithosphere effective thickness (and therefore ridigidity)
    rigidity_method = uniform               ! test1: uniform | test2: uniform | test3a: gaussian_minus | test3b: gaussian_plus | test3c: uniform | test3d: uniform | test4: laty | test5: uniform

    ! Calculate geoid (for test2, test4?)
    calc_geoid = .true.                    ! test1: .false. | test2: .true. | test3*: .false. | test4: .false. | test5: .false.
/
